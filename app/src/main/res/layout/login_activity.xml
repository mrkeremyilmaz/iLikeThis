<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kerem.ilikethis.LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/login_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#d60a0a" />

            <EditText
                android:id="@+id/input_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:hint="Username: "
                android:maxLines="1"
                android:textColorLink="#d60a0a" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_userName"
                android:hint="Password:"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColorLink="#d60a0a" />

            <CheckBox
                android:id="@+id/showPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/input_password"
                android:layout_below="@id/input_password"
                android:text="Show Password"
                android:textSize="13dp" />

            <Button
                android:id="@+id/button_signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_info"
                android:layout_marginTop="5dp"
                android:background="#D60A0A"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/button_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_signIn"
                android:layout_marginTop="5dp"
                android:background="#D60A0A"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/button_forgetPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/button_signUp"
                android:layout_marginTop="5dp"
                android:background="#D60A0A"
                android:text="Forget Password"
                android:textAllCaps="false"
                android:textColor="#FFF" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
