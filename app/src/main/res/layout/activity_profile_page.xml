<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kerem.ilikethis.ProfilePage">

    <ImageView
        android:id="@+id/profileView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/usericon" />

    <TextView
        android:id="@+id/showBookCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:text="Book: "
        android:textColor="#d60a0a"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/showMovieCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showBookCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Movie: "
        android:textColor="#d60a0a"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/showMusicCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showMovieCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Music: "
        android:textColor="#d60a0a"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/showPlaceCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showMusicCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Place: "
        android:textColor="#d60a0a"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/showTVShowCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showPlaceCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="TV Show: "
        android:textColor="#d60a0a"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/showVideoGameCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showTVShowCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Video Game: "
        android:textColor="#d60a0a"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/showWebsiteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showVideoGameCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Website: "
        android:textColor="#d60a0a"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/showNoteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showWebsiteCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Note: "
        android:textColor="#d60a0a"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button_uploadToCloud"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/profileView"
        android:layout_toRightOf="@+id/profileView"
        android:onClick="onClickCreateFile"
        android:text="UPLOAD TO CLOUD" />

    <Button
        android:id="@+id/button_retrieveFromCloud"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/profileView"
        android:layout_toStartOf="@+id/profileView"
        android:onClick="onClickOpenFile"
        android:text="RETRIEVE FROM CLOUD" />


</RelativeLayout>