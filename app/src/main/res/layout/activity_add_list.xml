<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context="com.example.kerem.ilikethis.AddList">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/editInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:ems="20"
                android:text="Note: First enter a new list name, then press to one of the category button to create new list in that category"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/newListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editInfo"
                android:layout_marginTop="40dp"
                android:hint="Type a new list name"
                android:textColorHint="@android:color/white" />

            <GridLayout
                android:id="@+id/myGridLayout"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@id/newListName"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <Button
                    android:id="@+id/booksButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="addList"
                    android:text="Book"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="245dp" />

                <Button
                    android:id="@+id/moviesButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="addList"
                    android:text="Movie"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="245dp" />

                <Button
                    android:id="@+id/videoGamesButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="addList"
                    android:text="Video Game"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="245dp" />

                <Button
                    android:id="@+id/placesButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="addList"
                    android:text="Place"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="245dp" />

                <Button
                    android:id="@+id/websitesButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="addList"
                    android:text="Website"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="245dp" />

                <Button
                    android:id="@+id/tvShowsButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="addList"
                    android:text="TV Show"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="245dp" />

                <Button
                    android:id="@+id/musicsButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="addList"
                    android:text="Music"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="245dp" />

                <Button
                    android:id="@+id/notesButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="100dp"
                    android:layout_height="61dp"
                    android:layout_column="3"
                    android:layout_row="3"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="addList"
                    android:text="Note"
                    tools:layout_editor_absoluteX="220dp"
                    tools:layout_editor_absoluteY="245dp" />

            </GridLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
