<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kerem.ilikethis.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/input_userName_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:hint="Username: "
                android:maxLines="1"
                android:textColorLink="#d60a0a" />

            <EditText
                android:id="@+id/input_password_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_userName_signUp"
                android:layout_marginTop="10dp"
                android:hint="Password:"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColorLink="#d60a0a" />

            <CheckBox
                android:id="@+id/showPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/input_password_signUp_check"
                android:layout_below="@+id/input_password_signUp_check"
                android:text="Show Password"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/input_password_signUp_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_password_signUp"
                android:layout_marginTop="0dp"
                android:hint="Confirm password:"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColorLink="#d60a0a" />

            <EditText
                android:id="@+id/input_email_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showPassword"
                android:layout_marginTop="40dp"
                android:hint="Email:"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColorLink="#d60a0a" />


            <TextView
                android:id="@+id/info_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_email_signUp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:textAlignment="textStart"
                android:textColor="#FF0000" />

            <Button
                android:id="@+id/button_signUp_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/info_signup"
                android:layout_marginTop="5dp"
                android:background="#D60A0A"

                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#FFF" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>