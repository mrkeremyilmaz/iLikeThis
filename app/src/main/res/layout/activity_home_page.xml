<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context="com.example.kerem.ilikethis.HomePage">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/shareButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/userProfileButton"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:clickable="true"
        android:tint="@android:color/holo_green_dark"
        app:backgroundTint="@android:color/white"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_share" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addCategoryButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:clickable="true"
        android:onClick="addListFromHomePage"
        android:tint="@android:color/holo_green_dark"
        app:backgroundTint="@android:color/white"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/userProfileButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/addCategoryButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/usericon"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="420dp" />

    <GridLayout
        android:id="@+id/myGridLayout"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/booksButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_column="0"
            android:layout_row="0"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"
            android:onClick="categoryButtonsFunction"
            android:text="Book"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="245dp" />

        <Button
            android:id="@+id/moviesButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_column="0"
            android:layout_row="1"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"
            android:onClick="categoryButtonsFunction"
            android:text="Movie"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="245dp" />

        <Button
            android:id="@+id/videoGamesButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_column="0"
            android:layout_row="2"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"
            android:onClick="categoryButtonsFunction"
            android:text="Video Game"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="245dp" />

        <Button
            android:id="@+id/placesButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_column="0"
            android:layout_row="3"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"
            android:onClick="categoryButtonsFunction"
            android:text="Place"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="245dp" />

        <Button
            android:id="@+id/websitesButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_column="3"
            android:layout_row="0"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"
            android:onClick="categoryButtonsFunction"
            android:text="Website"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="245dp" />

        <Button
            android:id="@+id/tvShowsButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_column="3"
            android:layout_row="1"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"
            android:onClick="categoryButtonsFunction"
            android:text="TV Show"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="245dp" />

        <Button
            android:id="@+id/musicsButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_column="3"
            android:layout_row="2"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"
            android:onClick="categoryButtonsFunction"
            android:text="Music"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="245dp" />

        <Button
            android:id="@+id/notesButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_column="3"
            android:layout_row="3"
            android:backgroundTint="@color/colorAccent"
            android:inputType="text"
            android:onClick="categoryButtonsFunction"
            android:text="Note"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="245dp" />

    </GridLayout>


</RelativeLayout>


